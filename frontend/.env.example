# Frontend Environment Variables
# Copy this file to .env.local for local development
# Copy to .env.production for production builds
# NEVER commit .env files with actual values to version control

# Backend API URL
VITE_API_URL=http://localhost:5000

# Mapbox Configuration (get your token from https://www.mapbox.com/)
VITE_MAPBOX_TOKEN=your_mapbox_access_token_here

# WebSocket URL (for real-time updates)
VITE_WS_URL=ws://localhost:5000

# Application Configuration
VITE_APP_NAME=Smart Campus Directory
VITE_APP_VERSION=1.0.0

# Feature Flags (set to 'true' or 'false')
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=true

# Map Configuration
VITE_MAP_CENTER_LAT=14.591552
VITE_MAP_CENTER_LNG=120.981539
VITE_MAP_ZOOM=19
